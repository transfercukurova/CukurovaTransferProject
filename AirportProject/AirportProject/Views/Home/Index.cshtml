@model IEnumerable<Category>

<div class="text-center">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>İsim</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                </tr>
            }
        </tbody>
    </table>
</div>
